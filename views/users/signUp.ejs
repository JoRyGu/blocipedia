<!DOCTYPE html>
<html>
<head>
  <% include ../static/partials/head.ejs %> 
</head>
<body>
  <% include ../static/partials/navbar.ejs %> 
  <main class="container">
    <% include ../static/partials/messages.ejs %> 
    <h1>Sign Up</h1>
    <form action="/users/sign-up" method="post" novalidate>
      <div class="form-row">
        <div class="col">
          <label for="firstname">First Name</label>
          <input type="text" name="firstname" class="form-control">
          <small class="text-muted">First Name Required</small>
        </div>
        <div class="col">
          <label for="lastname">Last Name</label>
          <input type="text" name="lastname" class="form-control">
          <small class="text-muted">Last Name Required</small>
        </div>
      </div>
      <div class="form-group">
        <label for="email">Email Address</label>
        <input type="email" class="form-control" name="email" placeholder="YourAddress@example.com">
        <small class="text-muted" id="emailHelp">Email address must be valid.</small>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" name="password">
      </div>
      <div class="form-group">
        <label for="confirmPassword">Confirm Password</label>
        <input type="password" class="form-control" name="confirmPassword">
        <small class="text-muted">Passwords must match.</small>
      </div>
      <div class="form-group">
        <label for="role">Account Level</label>
        <select name="role" id="role" class="form-control">
          <option value="member">Standard - FREE</option>
          <option value="premium">Premium - $9.99 / Month</option>
        </select>
      </div>
      <button class="btn btn-success btn-font" type="submit">Submit</button>
    </form>
  </main>
  <% include ../static/partials/baseScripts.ejs %> 
</body>
</html>