<% if (messages.error || messages.notice) { %>
  <div class="alert alert-<%= messages.error ? 'danger' : 'warning' %> alert-dismissable fade show" role="alert">
    <button class="close" type="button" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <% if (messages.error) { %>
    <ul>
      <% messages.error.forEach((err, i) => { %>
       <li>
        <%= `${messages.error[i]}` %> 
       </li>
      <% }) %>
    </ul>
    <% } else { %>
    <p>
      <%= messages.notice %> 
    </p>
    <% } %>
  </div>
<% } %>